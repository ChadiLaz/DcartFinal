@model IEnumerable<DcartFinal.Models.Cart>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{ ViewBag.Title = "ShoppingCart";
}
<table>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Image/@item.MainImageURL" height="30px" width="30px" class="img-thumbnail" />
            </td>
            <td>
                @item.ProductId
            </td>
            <td>
                @item.Quantity.ToString(format: "#,##0")
            </td>
            <td>
                @item.UnitPrice.ToString(format: "#,##0.00")
            </td>
            <td>
                @item. Total.Tostring(format: "#,##0.00")
            </td>
        </tr>
    }
    <tr>
        <td colspan="4" style="text-align: right">
            <h3>Total Amount</h3>
        </td>
        <td style="text-align: right">
            
        </td>
    </tr>

</table>